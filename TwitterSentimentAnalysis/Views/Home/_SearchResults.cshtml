@model TwitterSentimentAnalysis.Models.SearchResultsModel

<div class="row search-results">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" cellspacing="0">
            <thead>
                <tr>
                    <th>Positive</th>
                    <th>Neutral</th>
                    <th>Negative</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.RowsCount; i++)
                {
                    <tr>
                        <td>@((Model.PositiveTweets.Count() > i && Model.PositiveTweets[i] != null) ? Model.PositiveTweets[i].Text : "")</td>
                        <td>@((Model.NeutralTweets.Count() > i && Model.NeutralTweets[i] != null) ? Model.NeutralTweets[i].Text : "")</td>
                        <td>@((Model.NegativeTweets.Count() > i && Model.NegativeTweets[i] != null) ? Model.NegativeTweets[i].Text : "")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="chartContainer">

</div>

<script>
    $(document).ready(function () {
        renderChart(@Html.Raw(Model.ChartData));
    });
</script>